generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id
  name     String
  email    String @unique
  idTenant String
  todos    Todo[]

  @@map("users")
}

enum TodoStatus {
  pending
  progress
  done
}

model Todo {
  id          String     @id
  description String
  status      TodoStatus
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("todos")
}
